<div class="contents_row">
  <div class="change_sign">
    <%= link_to "ログインへ", "/users/sign_in" %>
  </div>
  <div class="container">
    <h2>ユーザー新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>

      <div class="field">
        <%= f.label :image, "プロフィール画像" %><br>
        <%= f.file_field :image, class: "image_field", id: "image_preview" %>
        <div id="previews"></div>
      </div>

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :身長 %><br />
        <%= f.text_field :height %>
      </div>

      <div class="field">
        <%= f.label :目標 %><br />
        <%= f.text_field :mark %>
      </div>

      <div class="field">
        <%= f.label :メモ %><br />
        <%= f.text_field :memo %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>